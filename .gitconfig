[diff]
    tool = vimdiff
    guitool = meld
[difftool]
    cmd = vimdiff
    prompt = false
[merge]
    tool = vimdiff
    guitool = meld
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[alias]
    lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
    git = !exec git
[color]
    ui = always
    branch = always
    diff = always
    interactive = always
    status = always
