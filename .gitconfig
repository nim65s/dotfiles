[user]
    name = Guilhem Saurel
    email = guilhem.saurel@laas.fr
    signingkey = 4653CF28
[diff]
    tool = vimdiff
[difftool]
    cmd = vimdiff
    prompt = false
[core]
    excludesfile = ~/dotfiles/gitignore
    pager = delta --syntax-theme='zenburn'
[push]
    default = matching
[merge]
    tool = vimdiff
[flake8]
    max-line-length = 160
    ignore = E128,E123,E126
[alias]
    lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
    git = !exec git
[color]
    ui = always
    branch = always
    diff = always
    interactive = always
    status = always
[url "git@gepgitlab.laas.fr"]
    insteadof = git@eur0c.laas.fr
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[interactive]
    diffFilter = delta --color-only
[pull]
	ff = only
[init]
	defaultBranch = main
[url "git@github.com:"]
  insteadOf = git://github.com/
[url "git@github.com:"]
  insteadOf = https://github.com/
[url "git@git.inpt.fr:"]
  insteadOf = https://git.inpt.fr/
[hub]
	protocol = ssh
