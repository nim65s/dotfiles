#yeganesh
"`echo | yeganesh`"
    m:0x40 + c:33
    Mod4 + p 

#mpc toggle
"mpc toggle"
    m:0x0 + c:172
    XF86AudioPlay 

#mpc stop
"mpc stop"
    m:0x0 + c:174
    XF86AudioStop 

#mpc next
"mpc next"
    m:0x0 + c:171
    XF86AudioNext 

#mpc prev
"mpc prev"
    m:0x0 + c:173
    XF86AudioPrev 

#volup
"ossmix vmix0-outvol -- +2"
    m:0x0 + c:123
    XF86AudioRaiseVolume 

#voldown
"ossmix vmix0-outvol -- -2"
    m:0x0 + c:122
    XF86AudioLowerVolume 

#mute
"[[ "$(ossmix misc.front-mute | cut -d" " -f 10)" == "ON" ]] && ossmix misc.front-mute OFF || ossmix misc.front-mute ON"
    m:0x0 + c:121
    XF86AudioMute 

